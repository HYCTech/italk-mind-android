<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_black_86"
        android:text="完善资料"
        android:id="@+id/textView2" />

    <RelativeLayout
        android:id="@+id/init"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/ns_dialog_card_bg">

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/color_black_86"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/tv_nick_name"
            android:background="@null"
            android:textColor="@color/color_black_70"
            android:textSize="16sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_nick_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:background="@color/ark_color_gray" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/color_black_86"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@+id/tv_gender"
            android:background="@null"
            android:textColor="@color/color_black_70"
            android:visibility="gone"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/gender"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:src="@mipmap/jt" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/ark_color_gray" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="生日"
            android:textColor="@color/color_black_86"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/iv_birthday"
            android:layout_toRightOf="@+id/tv_birthday"
            android:background="@null"
            android:textColor="@color/color_black_70"
            android:visibility="gone"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_birthday"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/birthday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:src="@mipmap/jt" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/birthday"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/ark_color_gray" />

        <RelativeLayout
            android:id="@+id/select_gender"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/no_bg_rectangle"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="男" />

            <TextView
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/male"
                android:layout_marginTop="12dp"
                android:text="女" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/btnMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/button_style" />

                <RadioButton
                    android:id="@+id/btnWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:button="@drawable/button_style" />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/logo"
        android:textSize="12sp"
        android:textColor="@color/color_black_86"
        android:text="上传头像"
        android:id="@+id/textView3" />

    <Button
        android:id="@+id/complete"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_alignTop="@+id/init"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/default_img"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView3" />
</RelativeLayout>
