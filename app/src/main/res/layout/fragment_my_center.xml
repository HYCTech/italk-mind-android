<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <View
        android:id="@+id/fm_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/head_item"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/fm_setting_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fm_line"
        android:background="@color/white"
        android:padding="10dp"
        android:text="昵称"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_setting_nickname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fm_line"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:paddingRight="10dp"
        android:textColor="@color/color_black_54"
        android:textSize="14sp" />

    <View
        android:id="@+id/fm_line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fm_setting_nickname"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/fm_setting_gender"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fm_line1"
        android:background="@color/white"
        android:padding="10dp"
        android:text="性别"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_setting_gender"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fm_line1"
        android:background="@color/white"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:textColor="@color/color_black_54"
        android:textSize="14sp" />

    <View
        android:id="@+id/fm_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fm_setting_gender"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/fm_setting_qrcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fm_line2"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:padding="10dp"
        android:text="我的二维码"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_setting_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fm_line2"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/qr_code"
        android:textColor="@color/color_black_54"
        android:textSize="16sp" />

    <View
        android:id="@+id/fm_line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fm_setting_qrcode"
        android:background="#cccccc" />

    <View
        android:id="@+id/fm_line4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fm_line3"
        android:layout_marginTop="20dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/fm_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fm_line4"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_me_setting"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="设置"
        android:textSize="16sp" />

    <View
        android:id="@+id/fm_line5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fm_setting"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/head_item"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/fm_head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/fm_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="天青色等烟雨" />

        <ImageView
            android:id="@+id/gender_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/fm_nick_name"
            android:layout_alignTop="@+id/fm_nick_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>


</RelativeLayout>